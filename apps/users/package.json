{
  "name": "users",
  "version": "0.0.1",
  "description": "AppCompass Users Service",
  "author": "Jubair Saidi",
  "repository": "github:appcompass/users-microservice",
  "homepage": "https://github.com/appcompass/users-microservice",
  "bugs": {
    "url": "https://github.com/appcompass/users-microservice/issues"
  },
  "funding": {
    "type": "patreon",
    "url": "https://www.patreon.com/jubeizon"
  },
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "lint": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\" && eslint \"{src,apps,libs,test}/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" && eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/setup schema:create && node dist/main",
    "setup:secrets": "ts-node src/setup.ts setup:secrets",
    "setup:db": "ts-node src/setup.ts schema:create",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm --config src/db/cli-config.ts",
    "deps:check": "depcruise --validate .dependency-cruiser.json src",
    "test:unit": "jest --config ./test/jest-unit.json",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.15",
    "@nestjs/core": "^7.6.15",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/microservices": "^7.6.15",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.6.15",
    "@nestjs/swagger": "^4.8.0",
    "@nestjs/typeorm": "^7.1.5",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "express-rate-limit": "^5.2.6",
    "helmet": "^4.6.0",
    "joi": "^17.4.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "nats": "^1.4.12",
    "nestjs-redoc": "^2.2.1",
    "node-vault": "^0.9.21",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.1.0",
    "typeorm": "^0.2.33"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.1",
    "@nestjs/testing": "^7.6.15",
    "@types/bcrypt": "^10.0.28-alpha",
    "@types/eslint": "^7.2.13",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/express-rate-limit": "^5.1.1",
    "@types/jest": "^26.0.23",
    "@types/joi": "^17.2.2",
    "@types/lodash": "^4.14.170",
    "@types/node": "^15.6.2",
    "@types/node-vault": "^0.9.13",
    "@types/passport": "^0.4.7",
    "@types/passport-jwt": "^3.0.5",
    "@types/pg": "^8.6.0",
    "@types/prettier": "^2.2.3",
    "@types/rimraf": "^3.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "4.26.0",
    "@typescript-eslint/parser": "4.26.0",
    "dependency-cruiser": "^10.0.1",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.3",
    "prettier": "^2.3.0",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.2",
    "ts-loader": "^9.2.2",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.3.2"
  }
}